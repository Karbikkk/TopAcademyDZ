#include <iostream>
#include <algorithm>

void sortArray(int* arr, int size) {
    std::sort(arr, arr + size);
}

int main() {
    int size = 5;
    int* arr = new int[size]{3, 1, 4, 1, 5};

    sortArray(arr, size);

    for (int i = 0; i < size; i++) {
        std::cout << arr[i] << " ";
    }

    delete[] arr;
    return 0;
}
